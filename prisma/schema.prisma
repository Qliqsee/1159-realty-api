// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Gender {
  MALE
  FEMALE
  PREFER_NOT_TO_SAY
}

enum MaritalStatus {
  SINGLE
  MARRIED
  DIVORCED
  WIDOWED
}

enum EmploymentStatus {
  EMPLOYED
  SELF_EMPLOYED
  UNEMPLOYED
}

enum KycStatus {
  DRAFT
  SUBMITTED
  APPROVED
  REJECTED
}

enum KycStep {
  PERSONAL
  ADDRESS
  OCCUPATION
  IDENTITY
  NEXT_OF_KIN
  BANK
}

enum PropertyType {
  LAND
  APARTMENT
}

enum PropertyStatus {
  AVAILABLE
  PRE_LAUNCH
  SOLD_OUT
  RESERVED
  ARCHIVED
}

enum UnitStatus {
  AVAILABLE
  SOLD
  RESERVED
  ARCHIVED
}

enum MediaType {
  IMAGE
  VIDEO
  YOUTUBE
  INSTAGRAM
}

enum LeadStatus {
  AVAILABLE
  RESERVED
  CLOSED
}

enum PartnershipStatus {
  NONE
  AWAITING_APPROVAL
  APPROVED
  REJECTED
}

enum InterestStatus {
  OPEN
  CLOSED
}

enum EnrollmentStatus {
  ONGOING
  COMPLETED
  SUSPENDED
  CANCELLED
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

enum PaymentType {
  INSTALLMENT
  OUTRIGHT
}

enum CommissionStatus {
  PENDING
  PAID
}

enum CommissionType {
  AGENT
  PARTNER
}

enum AppointmentStatus {
  BOOKED
  CANCELLED
}

enum CaseStatus {
  PENDING
  COMPLETED
  REJECTED
}

enum Country {
  NIGERIA
  OTHERS
}

enum DocumentStatus {
  PENDING
  APPROVED
  REJECTED
}

enum TicketStatus {
  OPENED
  CLOSED
}

enum TicketCategory {
  TECHNICAL
  BILLING
  PROPERTY
  ENROLLMENT
  KYC
  GENERAL
  OTHER
}

enum DisbursementType {
  COMMISSION
  REFUND
}

enum DisbursementStatus {
  PENDING
  RELEASED
  FAILED
}

enum DisbursementConfigMode {
  ALL_EXCEPT
  NONE_EXCEPT
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  password        String?
  googleId        String?  @unique
  isEmailVerified Boolean  @default(false)
  isSuspended     Boolean  @default(false)
  isBanned        Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  userRoles           UserRole[]
  emailOtps           EmailOtp[]
  passwordResetTokens PasswordResetToken[]
  admin               Admin?
  client              Client?

  @@map("users")
}

model Admin {
  id                String    @id @default(uuid())
  userId            String    @unique
  firstName         String?
  lastName          String?
  otherName         String?
  phone             String?
  dateOfBirth       DateTime?
  referralId        String?   @unique
  accountNumber     String?
  bankCode          String?
  accountName       String?
  bankName          String?
  street            String?
  city              String?
  stateId           Int?
  country           Country?
  postalCode        String?
  canOnboardClients Boolean   @default(true)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  user                     User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  state                    State?                @relation("AdminState", fields: [stateId], references: [id])
  kycCreatedRecords        Kyc[]                 @relation("KycCreatedBy")
  kycUpdatedRecords        Kyc[]                 @relation("KycUpdatedBy")
  kycReviewedRecords       Kyc[]                 @relation("KycReviewedBy")
  rejectionReasonsCreated  KycRejectionReason[]  @relation("RejectionCreatedBy")
  kycHistoryReviewed       KycHistory[]          @relation("KycHistoryReviewedBy")
  leadsCreated             Lead[]                @relation("LeadCreatedBy")
  leadsClosed              Lead[]                @relation("LeadClosedBy")
  leadsReserved            Lead[]                @relation("LeadReservedBy")
  leadsStatusChanged       Lead[]                @relation("LeadStatusChangedBy")
  leadFeedbacks            LeadFeedback[]
  leadAgentHistory         LeadAgentHistory[]
  referredClients          Client[]              @relation("ReferredByAgent")
  closedClients            Client[]              @relation("ClosedByAgent")
  partnershipsReviewed     Partnership[]         @relation("PartnershipReviewedBy")
  partnershipsSuspended    Partnership[]         @relation("PartnershipSuspendedBy")
  enrollmentsAsAgent       Enrollment[]          @relation("EnrollmentAgent")
  enrollmentsCreated       Enrollment[]          @relation("EnrollmentCreatedBy")
  enrollmentsCancelled     Enrollment[]          @relation("EnrollmentCancelledBy")
  agentCommissions         Commission[]          @relation("CommissionAgent")
  paymentLinksCreated      PaymentLink[]         @relation("PaymentLinkCreatedBy")
  salesTargets             SalesTarget[]         @relation("SalesTargetUser")
  salesTargetsCreated      SalesTarget[]         @relation("SalesTargetCreatedBy")
  achievements             Achievement[]         @relation("AchievementUser")
  schedulesCreated         Schedule[]            @relation("ScheduleCreatedBy")
  documentsReviewed        RequirementDocument[] @relation("DocumentReviewer")
  disbursementsCreated     Disbursement[]        @relation("DisbursementCreatedBy")
  disbursementsReleased    Disbursement[]        @relation("DisbursementReleasedBy")
  segmentsCreated          Segment[]             @relation("SegmentCreatedBy")
  segmentExports           SegmentExport[]       @relation("SegmentExportedBy")

  @@map("admins")
}

model Client {
  id                     String    @id @default(uuid())
  userId                 String    @unique
  firstName              String?
  lastName               String?
  otherName              String?
  phone                  String?
  gender                 Gender?
  referralSource         String?
  country                Country?
  stateId                Int?
  hasCompletedOnboarding Boolean   @default(false)
  referralId             String?   @unique
  referredByAgentId      String?
  referredByPartnerId    String?
  closedBy               String?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  user                  User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  state                 State?             @relation("ClientState", fields: [stateId], references: [id])
  kyc                   Kyc?
  propertyInterests     PropertyInterest[]
  referredByAgent       Admin?             @relation("ReferredByAgent", fields: [referredByAgentId], references: [id])
  closedByAgent         Admin?             @relation("ClosedByAgent", fields: [closedBy], references: [id])
  partnership           Partnership?
  referredByPartner     Client?            @relation("ReferredByPartner", fields: [referredByPartnerId], references: [id])
  referredClients       Client[]           @relation("ReferredByPartner")
  enrollmentsAsClient   Enrollment[]       @relation("EnrollmentClient")
  enrollmentsAsPartner  Enrollment[]       @relation("EnrollmentPartner")
  partnerCommissions    Commission[]       @relation("CommissionPartner")
  appointments          Appointment[]      @relation("AppointmentUser")
  cases                 Case[]             @relation("CaseUser")
  documentsSubmitted    RequirementDocument[] @relation("DocumentUser")
  supportTickets        SupportTicket[]    @relation("TicketUser")
  disbursementsAsRecipient Disbursement[]  @relation("DisbursementRecipient")

  @@map("clients")
}

model Role {
  id          String   @id @default(uuid())
  name        String
  appContext  String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userRoles     UserRole[]
  roleResources RoleResource[]

  @@unique([name, appContext])
  @@map("roles")
}

model Resource {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  roleResources RoleResource[]

  @@map("resources")
}

model Action {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("actions")
}

model RoleResource {
  id         String   @id @default(uuid())
  roleId     String
  resourceId String
  actions    String[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  role     Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  resource Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)

  @@unique([roleId, resourceId])
  @@index([roleId])
  @@index([resourceId])
  @@map("role_resources")
}

model UserRole {
  id        String   @id @default(uuid())
  userId    String
  roleId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
  @@map("user_roles")
}

model EmailOtp {
  id        String   @id @default(uuid())
  userId    String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, expiresAt])
  @@map("email_otps")
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token, expiresAt])
  @@map("password_reset_tokens")
}

model Kyc {
  id          String    @id @default(uuid())
  clientId    String    @unique
  status      KycStatus @default(DRAFT)
  currentStep KycStep   @default(PERSONAL)

  personal   Json?
  address    Json?
  occupation Json?
  identity   Json?
  nextOfKin  Json?
  bank       Json?

  personalDraft   Json?
  addressDraft    Json?
  occupationDraft Json?
  identityDraft   Json?
  nextOfKinDraft  Json?
  bankDraft       Json?

  submittedAt     DateTime?
  lastSubmittedAt DateTime?
  reviewedAt      DateTime?
  reviewedBy      String?
  feedback        String?   @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?
  updatedBy String?

  client           Client               @relation(fields: [clientId], references: [id], onDelete: Cascade)
  reviewer         Admin?               @relation("KycReviewedBy", fields: [reviewedBy], references: [id])
  creator          Admin?               @relation("KycCreatedBy", fields: [createdBy], references: [id])
  updater          Admin?               @relation("KycUpdatedBy", fields: [updatedBy], references: [id])
  rejectionReasons KycRejectionReason[]
  history          KycHistory[]

  @@map("kyc")
}

model KycRejectionReason {
  id        String   @id @default(uuid())
  kycId     String
  reason    String
  createdAt DateTime @default(now())
  createdBy String

  kyc     Kyc   @relation(fields: [kycId], references: [id], onDelete: Cascade)
  creator Admin @relation("RejectionCreatedBy", fields: [createdBy], references: [id])

  @@map("kyc_rejection_reasons")
}

model KycHistory {
  id     String    @id @default(uuid())
  kycId  String
  status KycStatus

  personal   Json?
  address    Json?
  occupation Json?
  identity   Json?
  nextOfKin  Json?
  bank       Json?

  submittedAt      DateTime
  reviewedAt       DateTime?
  reviewedBy       String?
  reviewAction     String?
  rejectionReasons String[]
  feedback         String?   @db.Text

  createdAt DateTime @default(now())

  kyc      Kyc    @relation(fields: [kycId], references: [id], onDelete: Cascade)
  reviewer Admin? @relation("KycHistoryReviewedBy", fields: [reviewedBy], references: [id])

  @@map("kyc_history")
}

model State {
  id        Int      @id
  name      String   @unique
  capital   String?
  createdAt DateTime @default(now())

  properties Property[]
  admins     Admin[]    @relation("AdminState")
  clients    Client[]   @relation("ClientState")

  @@map("states")
}

model Property {
  id          String         @id @default(uuid())
  name        String
  type        PropertyType
  subtype     String
  status      PropertyStatus @default(AVAILABLE)
  description String         @db.Text

  agriculturalFeeAmount   Decimal? @db.Decimal(15, 2)
  agriculturalFeeIsActive Boolean  @default(false)
  requiredDocuments       String[]

  country        String
  stateId        Int?
  address        String @db.Text
  nearbyLandmark String

  overdueInterestRate Decimal @db.Decimal(5, 2)
  paymentCycle        Int

  salesDiscountPercentage Decimal? @db.Decimal(5, 2)
  salesDiscountIsActive   Boolean  @default(false)

  mapConfigSrc    String?
  mapConfigWidth  String?
  mapConfigHeight String?

  inspectionDates DateTime[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  createdBy     String
  lastUpdatedBy String

  state             State?                @relation(fields: [stateId], references: [id])
  unitPricing       PropertyUnitPricing[]
  paymentPlans      PropertyPaymentPlan[]
  features          PropertyFeature[]
  media             PropertyMedia[]
  units             Unit[]
  propertyInterests PropertyInterest[]
  enrollments       Enrollment[]
  schedules         Schedule[]
  appointments      Appointment[]

  @@map("properties")
}

model PropertyUnitPricing {
  id             String   @id @default(uuid())
  propertyId     String
  unit           String
  regularPrice   Decimal  @db.Decimal(15, 2)
  prelaunchPrice Decimal  @db.Decimal(15, 2)
  createdAt      DateTime @default(now())

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("property_unit_pricing")
}

model PropertyPaymentPlan {
  id             String   @id @default(uuid())
  propertyId     String
  durationMonths Int
  interestRate   Decimal  @db.Decimal(5, 2)
  createdAt      DateTime @default(now())

  property    Property     @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  enrollments Enrollment[]

  @@map("property_payment_plans")
}

model PropertyFeature {
  id         String   @id @default(uuid())
  propertyId String
  name       String
  icon       String
  createdAt  DateTime @default(now())

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("property_features")
}

model PropertyMedia {
  id           String    @id @default(uuid())
  propertyId   String
  type         MediaType
  url          String
  isPrimary    Boolean   @default(false)
  displayOrder Int       @default(0)
  caption      String?
  thumbnail    String?
  createdAt    DateTime  @default(now())

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("property_media")
}

model Unit {
  id         String     @id @default(uuid())
  propertyId String
  unitId     String
  unit       String
  coordinate String
  feature    String?
  status     UnitStatus @default(AVAILABLE)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  property    Property     @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  enrollments Enrollment[]

  @@unique([propertyId, unitId])
  @@map("units")
}

model PropertyInterest {
  id          String         @id @default(uuid())
  propertyId  String
  clientId    String
  message     String?
  status      InterestStatus @default(OPEN)
  agentId     String?
  contactedAt DateTime?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  client   Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([propertyId, clientId])
  @@index([status])
  @@index([agentId])
  @@map("property_interests")
}

model Lead {
  id                   String     @id @default(uuid())
  email                String
  firstName            String
  lastName             String
  phone                String?
  status               LeadStatus @default(AVAILABLE)
  reservedBy           String?
  reservationExpiresAt DateTime?
  addedBy              String
  closedBy             String?
  statusChangedAt      DateTime?
  statusChangedBy      String?
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt

  creator       Admin              @relation("LeadCreatedBy", fields: [addedBy], references: [id])
  closer        Admin?             @relation("LeadClosedBy", fields: [closedBy], references: [id])
  reserver      Admin?             @relation("LeadReservedBy", fields: [reservedBy], references: [id])
  statusChanger Admin?             @relation("LeadStatusChangedBy", fields: [statusChangedBy], references: [id])
  feedbacks     LeadFeedback[]
  agentHistory  LeadAgentHistory[]

  @@index([email])
  @@index([status])
  @@index([reservedBy])
  @@index([addedBy])
  @@map("leads")
}

model LeadFeedback {
  id        String   @id @default(uuid())
  leadId    String
  agentId   String
  comment   String   @db.Text
  createdAt DateTime @default(now())

  lead  Lead  @relation(fields: [leadId], references: [id], onDelete: Cascade)
  agent Admin @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([leadId])
  @@index([agentId])
  @@map("lead_feedbacks")
}

model LeadAgentHistory {
  id           String    @id @default(uuid())
  leadId       String
  agentId      String
  assignedAt   DateTime  @default(now())
  unassignedAt DateTime?
  reason       String?

  lead  Lead  @relation(fields: [leadId], references: [id], onDelete: Cascade)
  agent Admin @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([leadId])
  @@index([agentId])
  @@map("lead_agent_history")
}

model Partnership {
  id                String            @id @default(uuid())
  clientId          String            @unique
  status            PartnershipStatus @default(NONE)
  appliedAt         DateTime?
  reviewedAt        DateTime?
  reviewedBy        String?
  rejectedAt        DateTime?
  rejectionCooldown DateTime?
  suspendedAt       DateTime?
  suspendedBy       String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  client    Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  reviewer  Admin? @relation("PartnershipReviewedBy", fields: [reviewedBy], references: [id])
  suspender Admin? @relation("PartnershipSuspendedBy", fields: [suspendedBy], references: [id])

  @@map("partnerships")
}

model Enrollment {
  id                    String           @id @default(uuid())
  propertyId            String
  unitId                String?
  agentId               String
  clientId              String?
  partnerId             String?
  paymentType           PaymentType
  selectedPaymentPlanId String?
  totalAmount           Decimal          @db.Decimal(15, 2)
  amountPaid            Decimal          @default(0) @db.Decimal(15, 2)
  status                EnrollmentStatus @default(ONGOING)
  gracePeriodDaysUsed   Int              @default(0)
  enrollmentDate        DateTime         @default(now())
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
  createdBy             String
  cancelledAt           DateTime?
  cancelledBy           String?
  suspendedAt           DateTime?
  resumedAt             DateTime?

  property     Property             @relation(fields: [propertyId], references: [id])
  unit         Unit?                @relation(fields: [unitId], references: [id])
  agent        Admin                @relation("EnrollmentAgent", fields: [agentId], references: [id])
  client       Client?              @relation("EnrollmentClient", fields: [clientId], references: [id])
  partner      Client?              @relation("EnrollmentPartner", fields: [partnerId], references: [id])
  creator      Admin                @relation("EnrollmentCreatedBy", fields: [createdBy], references: [id])
  canceller    Admin?               @relation("EnrollmentCancelledBy", fields: [cancelledBy], references: [id])
  paymentPlan  PropertyPaymentPlan? @relation(fields: [selectedPaymentPlanId], references: [id])
  invoices     Invoice[]
  commissions  Commission[]
  paymentLinks PaymentLink[]
  disbursements Disbursement[]

  @@index([propertyId])
  @@index([agentId])
  @@index([clientId])
  @@index([partnerId])
  @@index([status])
  @@index([enrollmentDate])
  @@map("enrollments")
}

model Invoice {
  id                String        @id @default(uuid())
  enrollmentId      String
  installmentNumber Int
  dueDate           DateTime
  amount            Decimal       @db.Decimal(15, 2)
  amountPaid        Decimal       @default(0) @db.Decimal(15, 2)
  status            InvoiceStatus @default(PENDING)
  overdueDate       DateTime?
  overdueFee        Decimal       @default(0) @db.Decimal(15, 2)
  paidAt            DateTime?
  paymentReference  String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  enrollment   Enrollment    @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  commissions  Commission[]
  paymentLinks PaymentLink[]

  @@index([enrollmentId])
  @@index([status])
  @@index([dueDate])
  @@map("invoices")
}

model Commission {
  id             String           @id @default(uuid())
  enrollmentId   String
  invoiceId      String
  agentId        String?
  partnerId      String?
  type           CommissionType
  percentage     Decimal          @db.Decimal(5, 2)
  amount         Decimal          @db.Decimal(15, 2)
  status         CommissionStatus @default(PENDING)
  dueDate        DateTime?
  paidAt         DateTime?
  disbursementId String?          @unique
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  enrollment   Enrollment    @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  invoice      Invoice       @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  agent        Admin?        @relation("CommissionAgent", fields: [agentId], references: [id])
  partner      Client?       @relation("CommissionPartner", fields: [partnerId], references: [id])
  disbursement Disbursement? @relation(fields: [disbursementId], references: [id])

  @@index([enrollmentId])
  @@index([invoiceId])
  @@index([agentId])
  @@index([partnerId])
  @@index([status])
  @@index([type])
  @@index([disbursementId])
  @@map("commissions")
}

model PaymentLink {
  id                String    @id @default(uuid())
  enrollmentId      String
  invoiceId         String
  firstName         String
  lastName          String
  token             String    @unique
  paystackReference String?
  paymentUrl        String?   @db.Text
  isActive          Boolean   @default(true)
  createdAt         DateTime  @default(now())
  expiresAt         DateTime?
  usedAt            DateTime?
  createdBy         String

  enrollment Enrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  invoice    Invoice    @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  creator    Admin      @relation("PaymentLinkCreatedBy", fields: [createdBy], references: [id])

  @@unique([invoiceId, isActive])
  @@index([token])
  @@index([enrollmentId])
  @@map("payment_links")
}

model SalesTarget {
  id             String   @id @default(uuid())
  adminId        String
  targetAmount   Decimal  @db.Decimal(15, 2)
  achievedAmount Decimal  @default(0) @db.Decimal(15, 2)
  startDate      DateTime
  endDate        DateTime
  createdBy      String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  admin   Admin @relation("SalesTargetUser", fields: [adminId], references: [id], onDelete: Cascade)
  creator Admin @relation("SalesTargetCreatedBy", fields: [createdBy], references: [id])

  @@index([adminId])
  @@index([startDate, endDate])
  @@index([createdBy])
  @@map("sales_targets")
}

model Achievement {
  id             String   @id @default(uuid())
  adminId        String
  targetAmount   Decimal  @db.Decimal(15, 2)
  achievedAmount Decimal  @db.Decimal(15, 2)
  startDate      DateTime
  endDate        DateTime
  achievedAt     DateTime @default(now())
  createdAt      DateTime @default(now())

  admin Admin @relation("AchievementUser", fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId])
  @@index([startDate, endDate])
  @@map("achievements")
}

model Schedule {
  id         String   @id @default(uuid())
  propertyId String
  dateTime   DateTime
  location   String   @db.Text
  message    String?  @db.Text
  createdBy  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  property     Property      @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  creator      Admin         @relation("ScheduleCreatedBy", fields: [createdBy], references: [id])
  appointments Appointment[]

  @@index([propertyId])
  @@index([dateTime])
  @@index([createdBy])
  @@map("schedules")
}

model Appointment {
  id          String            @id @default(uuid())
  scheduleId  String
  propertyId  String
  clientId    String
  status      AppointmentStatus @default(BOOKED)
  bookedAt    DateTime          @default(now())
  cancelledAt DateTime?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  schedule Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  client   Client   @relation("AppointmentUser", fields: [clientId], references: [id], onDelete: Cascade)

  @@unique([scheduleId, clientId])
  @@index([scheduleId])
  @@index([propertyId])
  @@index([clientId])
  @@index([status])
  @@map("appointments")
}

model Case {
  id         String     @id @default(uuid())
  name       String
  title      String
  clientId   String?
  propertyId String?
  status     CaseStatus @default(PENDING)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  client       Client?           @relation("CaseUser", fields: [clientId], references: [id], onDelete: SetNull)
  requirements CaseRequirement[]

  @@index([clientId])
  @@index([propertyId])
  @@index([status])
  @@map("cases")
}

model CaseRequirement {
  id          String   @id @default(uuid())
  caseId      String
  title       String
  description String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  case               Case                  @relation(fields: [caseId], references: [id], onDelete: Cascade)
  sampleDocuments    SampleDocument[]
  submittedDocuments RequirementDocument[]

  @@index([caseId])
  @@map("case_requirements")
}

model SampleDocument {
  id            String   @id @default(uuid())
  requirementId String
  fileUrl       String
  fileName      String
  fileType      String
  createdAt     DateTime @default(now())

  requirement CaseRequirement @relation(fields: [requirementId], references: [id], onDelete: Cascade)

  @@index([requirementId])
  @@map("sample_documents")
}

model RequirementDocument {
  id              String         @id @default(uuid())
  requirementId   String
  clientId        String
  fileUrl         String
  fileName        String
  fileType        String
  status          DocumentStatus @default(PENDING)
  rejectionReason String?        @db.Text
  submittedAt     DateTime       @default(now())
  reviewedAt      DateTime?
  reviewedBy      String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  requirement CaseRequirement @relation(fields: [requirementId], references: [id], onDelete: Cascade)
  client      Client          @relation("DocumentUser", fields: [clientId], references: [id], onDelete: Cascade)
  reviewer    Admin?          @relation("DocumentReviewer", fields: [reviewedBy], references: [id])

  @@index([requirementId])
  @@index([clientId])
  @@index([status])
  @@index([reviewedBy])
  @@map("requirement_documents")
}

model SupportTicket {
  id          String         @id @default(uuid())
  clientId    String
  category    TicketCategory
  reason      String         @db.Text
  attachments String[]
  status      TicketStatus   @default(OPENED)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  client Client @relation("TicketUser", fields: [clientId], references: [id], onDelete: Cascade)

  @@index([clientId])
  @@index([status])
  @@index([category])
  @@map("support_tickets")
}

model Disbursement {
  id                 String             @id @default(uuid())
  type               DisbursementType
  commissionId       String?            @unique
  enrollmentId       String
  recipientId        String
  recipientType      String
  amount             Decimal            @db.Decimal(15, 2)
  status             DisbursementStatus @default(PENDING)
  releaseDate        DateTime?
  transferCode       String?
  transferReference  String?
  paystackResponse   Json?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  createdBy          String
  releasedBy         String?

  enrollment Enrollment  @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  recipient  Client      @relation("DisbursementRecipient", fields: [recipientId], references: [id])
  creator    Admin       @relation("DisbursementCreatedBy", fields: [createdBy], references: [id])
  releaser   Admin?      @relation("DisbursementReleasedBy", fields: [releasedBy], references: [id])
  commission Commission?

  @@index([type])
  @@index([status])
  @@index([recipientId])
  @@index([enrollmentId])
  @@index([commissionId])
  @@index([createdAt])
  @@map("disbursements")
}

model DisbursementConfig {
  id               String                  @id @default(uuid())
  mode             DisbursementConfigMode
  exceptionUserIds String[]
  createdAt        DateTime                @default(now())
  updatedAt        DateTime                @updatedAt

  @@map("disbursement_configs")
}

model Segment {
  id              String   @id @default(uuid())
  name            String
  description     String?  @db.Text
  gender          String[]
  properties      String[]
  countries       String[]
  states          String[]
  trafficSources  String[]
  agentIds        String[]
  partnerIds      String[]
  brevoListId     String?
  createdBy       String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  creator        Admin          @relation("SegmentCreatedBy", fields: [createdBy], references: [id])
  segmentExports SegmentExport[]

  @@index([createdBy])
  @@index([createdAt])
  @@map("segments")
}

model SegmentExport {
  id           String   @id @default(uuid())
  segmentId    String
  usersCount   Int
  exportedBy   String
  exportedAt   DateTime @default(now())
  status       String   @default("SUCCESS")
  errorMessage String?  @db.Text

  segment   Segment @relation(fields: [segmentId], references: [id], onDelete: Cascade)
  exporter  Admin   @relation("SegmentExportedBy", fields: [exportedBy], references: [id])

  @@index([segmentId])
  @@index([exportedBy])
  @@index([exportedAt])
  @@map("segment_exports")
}
