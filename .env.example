# Database
DATABASE_URL="postgresql://username:password@host:5432/database_name?schema=public"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRATION="15m"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-key"
REFRESH_TOKEN_EXPIRATION="7d"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/auth/google/callback"

# CORS - Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Application
PORT=3000
NODE_ENV="development"
FRONTEND_URL="http://localhost:3001"

# Email Service (Brevo)
BREVO_API_KEY="your-brevo-api-key"
BREVO_SENDER_EMAIL="noreply@1159realty.com"
BREVO_SENDER_NAME="1159 Realty"

# OTP Configuration
OTP_EXPIRATION_MINUTES=10
OTP_RESEND_COOLDOWN_MINUTES=10

# Password Reset
PASSWORD_RESET_TOKEN_EXPIRATION_HOURS=1
PASSWORD_RESET_URL="http://localhost:3001/reset-password"

# DigitalOcean Spaces
DO_SPACES_ENDPOINT="https://nyc3.digitaloceanspaces.com"
DO_SPACES_KEY="your-spaces-key"
DO_SPACES_SECRET="your-spaces-secret"
DO_SPACES_BUCKET="1159-realty-uploads"
DO_SPACES_REGION="nyc3"

# File Upload
MAX_FILE_SIZE_MB=5
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/jpg"

# Paystack
PAYSTACK_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxx"
PAYSTACK_PUBLIC_KEY="pk_test_xxxxxxxxxxxxxxxxxx"
PAYSTACK_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxx"
